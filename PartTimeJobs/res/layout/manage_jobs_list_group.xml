<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/manage_list_jobs_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/action_settings" />

    <TextView
        android:id="@+id/manage_list_jobs_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:layout_alignTop="@id/manage_list_jobs_type"
        android:layout_marginRight="10dp"
        android:background="@drawable/manage_list_jobs_textview_shape"
        android:text="@string/action_settings" />

    <TextView
        android:id="@+id/manage_list_jobs_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/manage_list_jobs_type"
        android:layout_below="@id/manage_list_jobs_type"
        android:text="@string/action_settings" />

    <TextView
        android:id="@+id/manage_list_jobs_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/manage_list_jobs_addr"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/manage_list_jobs_addr"
        android:text="@string/action_settings" />

    <TextView
        android:id="@+id/manage_list_jobs_reqiures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/manage_list_jobs_publish_time"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/manage_list_jobs_publish_time"
        android:text="@string/action_settings" />

    <LinearLayout
        android:id="@+id/manage_list_jobs_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manage_list_jobs_reqiures"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/manage_list_jobs_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@drawable/manage_list_jobs_btn_shape1"
            android:text="@string/manage_list_jobs_look" />

        <Button
            android:id="@+id/manage_list_jobs_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/manage_list_jobs_btn_shape2"
            android:text="@string/manage_list_jobs_del" />
    </LinearLayout>

</RelativeLayout>